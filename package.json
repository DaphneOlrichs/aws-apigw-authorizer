{
  "name": "aws-apigw-authorizer",
  "version": "0.1.13",
  "description": "AWS Lambda Authorizer for API Gateway",
  "main": "lib/authorizer.js",
  "typings": "lib/authorizer.d.ts",
  "scripts": {
    "cover": "nyc npm t",
    "test": "mocha --require ts-node/register --timeout 5000 ./src/*.spec.ts",
    "watch": "mocha --watch --require ts-node/register --watch-extensions ts --timeout 5000 ./src/*.spec.ts",
    "tsc": "tsc",
    "build": "npm run cover && rm -rf lib && tsc && cp src/*.d.ts src/*.js lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ottokruse/aws-apigw-authorizer.git"
  },
  "author": "pi-team@mn.nl",
  "files": [
    "lib/!(*.spec).js",
    "lib/!(*.spec).d.ts"
  ],
  "license": "ISC",
  "homepage": "https://github.com/ottokruse/aws-apigw-authorizer",
  "dependencies": {
    "basic-auth": "^2.0.0",
    "ip-range-check": "0.0.2",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.2.1",
    "tslib": "^1.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mocha": "^5.2.2",
    "@types/nock": "^9.1.3",
    "@types/node": "^10.3.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nock": "^9.3.3",
    "nyc": "^12.0.2",
    "ts-node": "^6.1.1",
    "typescript": "^2.9.2"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 85,
    "statements": 85,
    "functions": 85,
    "branches": 85,
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/*.spec.ts",
      "testcontainer",
      "src/index.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "all": true
  }
}
